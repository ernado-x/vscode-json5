{
	"scopeName": "source.jstp",
	"fileTypes": ["jstp"],
	"name": "JSTP",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#value" }
	],
	"repository": {
		"array": {
			"begin": "\\[",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.array.begin.jstp" }
			},
			"end": "\\]",
			"endCaptures": {
				"0": { "name": "punctuation.definition.array.end.jstp" }
			},
			"name": "meta.structure.array.jstp",
			"patterns": [
				{ "include": "#comments" },
				{ "include": "#value" },
				{
					"match": ",",
					"name": "punctuation.separator.array.jstp"
				},
				{
					"match": "[^\\s\\]]",
					"name": "invalid.illegal.expected-array-separator.jstp"
				}
			]
		},
		"constant": {
			"match": "\\b(?:true|false|null|Infinity|NaN)\\b",
			"name": "constant.language.jstp"
		},
		"infinity": {
			"match": "(-)*\\b(?:Infinity|NaN)\\b",
			"name": "constant.language.jstp"
		},
		"number": {
			"patterns": [
				{
					"comment": "handles hexadecimal numbers",
					"match": "(0x)[0-9a-fA-f]*",
					"name": "constant.hex.numeric.jstp"
				},
				{
					"comment": "handles integer and decimal numbers",
					"match": "[+-.]?(?=[1-9]|0(?!\\d))\\d+(\\.\\d+)?([eE][+-]?\\d+)?",
					"name": "constant.dec.numeric.jstp"
				}
			]
		},
		"object": {
			"begin": "\\{",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.dictionary.begin.jstp" }
			},
			"comment": "a jstp object",
			"end": "\\}",
			"endCaptures": {
				"0": { "name": "punctuation.definition.dictionary.end.jstp" }
			},
			"name": "meta.structure.dictionary.jstp",
			"patterns": [
				{ "include": "#comments" },
				{
					"comment": "the jstp object key",
					"include": "#key"
				},
				{
					"begin": ":",
					"beginCaptures": {
						"0": { "name": "punctuation.separator.dictionary.key-value.jstp" }
					},
					"end": "(,)|(?=\\})",
					"endCaptures": {
						"1": { "name": "punctuation.separator.dictionary.pair.jstp" }
					},
					"name": "meta.structure.dictionary.value.jstp",
					"patterns": [
						{
							"comment": "the jstp object value",
							"include": "#value"
						},
						{
							"match": "[^\\s,]",
							"name": "invalid.illegal.expected-dictionary-separator.jstp"
						}
					]
				},
				{
					"match": "[^\\s\\}]",
					"name": "invalid.illegal.expected-dictionary-separator.jstp"
				}
			]
		},
		"stringSingle": {
			"begin": "[']",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.string.begin.jstp" }
			},
			"end": "[']",
			"endCaptures": {
				"0": { "name": "punctuation.definition.string.end.jstp" }
			},
			"name": "string.quoted.jstp",
			"patterns": [
				{
					"match": "(?x:                # turn on extended mode\n                     \\\\                # a literal backslash\n                     (?:               # ...followed by...\n                       [\"\\\\/bfnrt]     # one of these characters\n                       |               # ...or...\n                       u               # a u\n                       [0-9a-fA-F]{4}  # and four hex digits\n                     )\n                   )",
					"name": "constant.character.escape.jstp"
				},
				{
					"match": "\\\\.",
					"name": "invalid.illegal.unrecognized-string-escape.jstp"
				}
			]
		},
		"stringDouble": {
			"begin": "[\"]",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.string.begin.jstp" }
			},
			"end": "[\"]",
			"endCaptures": {
				"0": { "name": "punctuation.definition.string.end.jstp" }
			},
			"name": "string.quoted.jstp",
			"patterns": [
				{
					"match": "(?x:                # turn on extended mode\n                     \\\\                # a literal backslash\n                     (?:               # ...followed by...\n                       [\"\\\\/bfnrt]     # one of these characters\n                       |               # ...or...\n                       u               # a u\n                       [0-9a-fA-F]{4}  # and four hex digits\n                     )\n                   )",
					"name": "constant.character.escape.jstp"
				},
				{
					"match": "\\\\.",
					"name": "invalid.illegal.unrecognized-string-escape.jstp"
				}
			]
		},
		"key": {
			"name": "string.key.jstp",
			"patterns": [
				{ "include": "#stringSingle" },
				{ "include": "#stringDouble" },
				{
					"match": "[a-zA-Z0-9_-]",
					"name": "string.key.jstp"
				}
			]
		},
		"value": {
			"comment": "the 'value' diagram at http://json.org",
			"patterns": [
				{ "include": "#constant" },
				{ "include": "#infinity" },
				{ "include": "#number" },
				{ "include": "#stringSingle" },
				{ "include": "#stringDouble" },
				{ "include": "#array" },
				{ "include": "#object" }
			]
		},
		"comments": {
			"patterns": [
				{
					"match": "/{2}.*",
					"name": "comment.single.jstp"
				},
				{
					"begin": "/\\*\\*(?!/)",
					"captures": {
						"0": { "name": "punctuation.definition.comment.jstp" }
					},
					"end": "\\*/",
					"name": "comment.block.documentation.jstp"
				},
				{
					"begin": "/\\*",
					"captures": {
						"0": { "name": "punctuation.definition.comment.jstp" }
					},
					"end": "\\*/",
					"name": "comment.block.jstp"
				}
			]
		}
	}
}
